<h2>新規登録</h2>

<%= form_with model:@customer,url:customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="form-group row">
    <%= f.label :name,"ユーザーネーム" %>
    <%= f.text_field :name,autofocus: true, :placeholder => "ななし" %>
  </div>

　<div class="field">
    <%= f.label :email,"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password ,"パスワード（６文字以上）"%>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
