<div class="container">
 <h2 class="m-2 p-3">新規登録</h2>
  <div class="row col-9 mx-auto">
    <%= form_with model:@customer,url:customer_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
        <div class="form-group row">
          <%= f.label :name,"ユーザーネーム", class:"col-form-label" %>
          <%= f.text_field :name,autofocus: true, :placeholder => "ななし", class:"form-control" %>
        </div>
          <div class="form-group row">
            <%= f.label :birth_date,"生年月日",class: "m-3" %>
            <%= f.date_select :birth_date, use_mouth_numbers: true,start_year: 1930, end_year: (Time.now.year - 10),default: Date.new(1989,1,1) %>
          </div>
            <div class="field">
              <%= f.label :email,"メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
            </div>
              <div class="field">
                <%= f.label :password ,"パスワード（６文字以上）"%>
                <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
              </div>

                <div class="field">
                  <%= f.label :password_confirmation,"パスワード（確認用）" %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
                </div>

                  <div class="actions m-4">
                    <%= f.submit "新規登録",class:"btn btn-success" %>
                  </div>
                <% end %>
   <div class="col-md-8 mt-3">
      <h5 class="col"><span class="title">既に登録済みの方</span></h5>
        <%= link_to "こちら",new_customer_session_path %>からログインしてください。
   </div>
</div>
</div>
