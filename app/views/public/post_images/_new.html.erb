<div class="container">
 <div class="row">
 <h2 class="col-5 m-3">新規投稿</h2>
 </div>
 <div class="row">
  <%= form_with model:post_image, url: post_images_path, method: :post do |f| %>
  <div class="form-group">
  <%= f.label :title,"タイトル", class:"form-label" %>
  <%= f.text_field :title, class:"form-control col-5" %>
  </div>
  <div class="form-group">
  <%= f.label :introduction,"説明文", class:"form-label" %>
  <%= f.text_area :introduction, class:"col-5 form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image,"画像", class:"form-label" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <%= render "public/post_images/form",f: f %>
  </div>
<%= f.submit "投稿" %>
<% end %>
 </div>
</div>