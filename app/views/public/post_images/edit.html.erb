<div class="container">
  <div class="row mx-auto mt-3">
    <h2>投稿内容編集</h2>
  </div>
  <div class="row">
    <div class="mx-auto col-md-10 mt-3">
    <%= form_with model: @post_image, url: post_image_path, method: :patch do |f| %>
    <%= f.label :title,"タイトル",class:"col-md-4 col-6 col-form-label" %>
    <%= f.text_field :title, class:"col-md-5 form-control m-2" %>
    <%= f.label :introduction,"説明文", class:"col-md-4 col-6 col-form-label" %>
    <%= f.text_area :introduction,class:"col-md-6 form-control m-2" %>
    <%= f.label :image,"画像", class:"col-md-4 col-6 col-form-label" %>
    <%= f.file_field :image, accept: "image/*" %>
    <div class="m-3">
    <%= render "public/post_images/form",f: f %>
    </div>
    <%= f.submit "変更を保存する",class:"btn btn-success col-3 offset-5" %>
    <% end %>
    </div>
  </div>
</div>