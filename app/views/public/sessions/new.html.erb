<div class="container">
  <div class="row">
    <div class="col-6 mt-5">
      <h2>ログイン</h2>
    </div>
  </div>
   <div="row">
     <div class="mx-auto col-7 mt-2">
    <%= form_with model:@customer, url: customer_session_path do |f| %>
      <div class="field">
        <%= f.label :email,"メールアドレス" ,class:"col-form-label"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control col-md-6" %>
      </div>

      <div class="field">
      <%= f.label :password,"パスワード",class:"col-form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password",class:"form-controlv col-md-6" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
      </div>
      <% end %>

      <div class="actions">
      <%= f.submit "ログイン", class:"btn btn-success" %>
      </div>
      <% end %>
      </div>
   </div>
    <div class="row">
     <div class="col-md-8 ml-3 mt-5">
      <h5>会員登録がお済みでない方</h5>
     </div>
      <div class="col-md-6 offset-md-2 mt-3">
       <%= link_to "こちら",new_customer_registration_path %>
       から新規登録を行ってください。
      </div>
    </div>
</div>